<h2>Sign Up</h2>

<%= form_for @user, url: '/users' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :password %>
    <%= f.text_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><br>

    <%= f.submit %>
<% end %>