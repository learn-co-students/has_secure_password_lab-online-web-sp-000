<h1>Signup!</h1>

  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, :placeholder => "Confirm your password"%>
    <br><br>
    <input type=submit value='submit'>
  <% end %>