<%= form_for @user do |f| %>
    <%= f.label "Name:" %><br>
    <%= f.text_field :name %><br>
    <%= f.label "Password:" %><br>
    <%= f.password_field :password %><br>
    <%= f.label "Confirm Password:" %><br>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit  "signup" %>
<% end %>