
<%= form_for @user, url: signup_path, method: :post do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>

    <%= f.submit "Sign Up" %>
<%end%>