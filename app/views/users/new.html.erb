<h1>New User Signup</h1>

<%= form_for :user, url: '/users' do |f| %>
    <p><%= f.label :name %>
    <%= f.text_field :name %><p>
    
    <p><%= f.label :password %>
    <%= f.text_field :password %><p>

    <p><%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
  