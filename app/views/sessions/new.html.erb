<%= form_tag '/login', method="post" do %>
    <%= label_tag "user[name]" %><br>
    <%= text_field_tag "user[name]" %><br>

    <%= label_tag "user[password]" %><br>
    <%= password_field_tag "user[password]" %><br>

    <%= label_tag "user[password_confirmation]" %><br>
    <%= password_field_tag "user[password_confirmation] %><br>

    <%= submit_tag "Log In" %>
<% end %>