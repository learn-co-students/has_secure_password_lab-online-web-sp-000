<h2>Login</h2>

<% if flash[:notice] %>
    <p style="color:red"><strong><%= flash[:notice] %></strong></p>
<% end %>


<%= form_for :user, url: '/login' do |f| %>
    <%= f.label :name, "Username" %>
    <%= f.text_field :name %><p>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %><p>
    <%= f.submit "Login" %>
<% end %>