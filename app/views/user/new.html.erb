<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :name %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.label "Password Confirmation" %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit "Submit" %>
<% end %>  